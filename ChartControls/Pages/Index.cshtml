@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    List<LayoutData> SalesData = new List<LayoutData>()
    {
        new LayoutData{ Period = "Jan", OnlinePercentage = 36, RetailPercentage = 64 },
        new LayoutData{ Period = "Feb", OnlinePercentage = 62, RetailPercentage = 38 },
        new LayoutData{ Period = "Mar", OnlinePercentage = 81, RetailPercentage = 19 },
        new LayoutData{ Period = "Apr", OnlinePercentage = 59, RetailPercentage = 41 },
        new LayoutData{ Period = "May", OnlinePercentage = 89, RetailPercentage = 11 },
        new LayoutData{ Period = "Jun", OnlinePercentage = 72, RetailPercentage = 28 },
        new LayoutData{ Period = "Jul", OnlinePercentage = 43, RetailPercentage = 57 },
        new LayoutData{ Period = "Aug", OnlinePercentage = 46, RetailPercentage = 54 },
        new LayoutData{ Period = "Sep", OnlinePercentage = 55, RetailPercentage = 45 },
        new LayoutData{ Period = "Oct", OnlinePercentage = 63, RetailPercentage = 37 },
        new LayoutData{ Period = "Nov", OnlinePercentage = 57, RetailPercentage = 43 },
        new LayoutData{ Period = "Dec", OnlinePercentage = 80, RetailPercentage = 20 }

    };
}

<ejs-chart id="chart">
    <e-chart-primaryxaxis valueType=Category 
                          title="Period"></e-chart-primaryxaxis>
    <e-chart-primaryyaxis title="Sales Percentage"></e-chart-primaryyaxis>
    <e-chart-legendsettings visible=true ></e-chart-legendsettings>
    <e-chart-tooltipsettings enable=true></e-chart-tooltipsettings>
    <e-series-collection>
        <e-series typeof="Line" dataSource="SalesData"
                  name="OnLine"
                  xName="Period"
                  yName="OnlinePercentage">
                  <e-series-marker visible=true>
                      <e-series-datalabel visible=false></e-series-datalabel>
                  </e-series-marker>
        </e-series>
        <e-series typeof="Line" dataSource="SalesData"
                  name="Retail"
                  xName="Period"
                  yName="RetailPercentage">
            <e-series-marker visible=true>
                <e-series-datalabel visible=false></e-series-datalabel>
            </e-series-marker>
        </e-series>
    </e-series-collection>
</ejs-chart>

